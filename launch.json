{
    "verison": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "request": "launch",
            "name": "Debug File",
            "program": "${file}",
            "justMyCode": false,
            "pythonPath": "/home/m83393/.tmux/tmux-venv/bin/python"
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Debug Daemon CMD",
            "program": "${file}",
            "justMyCode": false,
            "pythonPath": "/home/m83393/.tmux/tmux-venv/bin/python",
            "args": ["${input:getCmd}", "--blocking"]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Debug Timer CMD",
            "program": "${file}",
            "justMyCode": false,
            "pythonPath": "/home/m83393/.tmux/tmux-venv/bin/python",
            "args": ["${input:getCmd}", "--timer", "${input:getTimer}", "--blocking"]
        }
    ],
    "inputs": [
        {
            "id": "getCmd",
            "type": "promptString",
            "description": "CMD: ",
            "default": ""
        },
        {
            "id": "getTimer",
            "type": "promptString",
            "description": "Timer: "
        }
    ]
}
